<?xml version="1.0" encoding="utf-8"?>
<com.example.popview.PopView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/x_pop_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/x_txt_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/x_btn_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_fullscreen" />

        <Button
            android:id="@+id/x_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_back" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.example.popview.MyWebView
            android:id="@+id/x_webview_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
        
        <VideoView
            android:id="@+id/x_videoview"
            android:layout_width="285px"
            android:layout_height="160px"
            android:layout_gravity="top|right"
            android:layout_marginRight="294dip"
            android:layout_marginTop="9dip"
            android:visibility="invisible"/>
    </FrameLayout>

</com.example.popview.PopView>