<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/x_scrollview"    android:layout_width="fill_parent"    android:layout_height="fill_parent" >        <RelativeLayout        android:id="@+id/x_relativelayout"        android:layout_width="match_parent"        android:layout_height="match_parent" >        <EditText            android:id="@+id/x_edit_path"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:hint="@string/x_str_file_path"            android:minWidth="200dip" />        <LinearLayout            android:id="@+id/x_linearlayout_video"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/x_edit_path"            android:orientation="vertical" >                        <Button                android:id="@+id/x_btn_choose_file"                android:layout_width="wrap_content"                android:layout_height="60dip"                android:text="@string/x_choose_file" />                        <Button                android:id="@+id/x_btn_call_system"                android:layout_width="wrap_content"                android:layout_height="60dip"                android:text="@string/x_call_system" />                        <Button                android:id="@+id/x_btn_videoview"                android:layout_width="wrap_content"                android:layout_height="60dip"                android:text="@string/x_videoview" />                        <Button                android:id="@+id/x_btn_mediaplayer"                android:layout_width="wrap_content"                android:layout_height="60dip"                android:text="@string/x_mediaplayer" />        </LinearLayout>                <VideoView            android:id="@+id/x_videoview"            android:layout_width="match_parent"            android:layout_height="300px"            android:layout_marginLeft="0px"            android:layout_marginTop="450px" />    </RelativeLayout>    </ScrollView>