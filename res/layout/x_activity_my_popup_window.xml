<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyPopupWindow" >

    <TextView
        android:id="@+id/x_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x_hello_world" />

    <Button
        android:id="@+id/x_btn_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/x_textView1"
        android:layout_below="@+id/x_textView1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp"
        android:text="PopupWindow" />

    <Button
        android:id="@+id/x_btn_popview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/x_btn_popupwindow"
        android:layout_below="@+id/x_btn_popupwindow"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="27dp"
        android:text="@string/x_btn_popview" />

    <AbsoluteLayout
        android:id="@+id/x_absolutelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >
    </AbsoluteLayout>

</RelativeLayout>